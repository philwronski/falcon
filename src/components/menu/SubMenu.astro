---
interface Props {
    title?: string;
}

const {title} = Astro.props;
---
{
    title ?
    <li>
        <h2 class="menu-title flex items-center gap-4 px-1.5">
            <span class="text-base-content">
                <slot name="title-icon"/>
            </span>
            {title}
        </h2>
        <ul>
            <slot/>
        </ul>
    </li> :
    <ul>
        <slot/>
    </ul>
    }
