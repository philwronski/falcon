---
import ThemeController from "./ThemeController.astro";

interface Props {
    title: string;
}

const {title} = Astro.props;
---
<div class="navbar bg-base-100 dark:bg-base-200 shadow-sm px-8">
    <div class="flex-none">
        <a class="text-2xl" href="/">{title}</a>
    </div>
    <div class="flex-1">
        <slot/>
    </div>
    <div class="flex-none">
        <ThemeController/>
    </div>
</div>